        <ul id="watchlist">
            <% user.watchlist.forEach(function(movieID) { %>
                <li>
                    <%= movieID %>
                    <button class="delete-btn" data-movie-id="<%= movieID %>">Delete</button>
                </li>
            <% }); %>
        </ul>
    </main>
    <script src="/scripts.js"></script>
    <script>
        // Function to delete movie from watchlist
        async function deleteMovie(movieId) {
    try {
        const response = await fetch(`/watchlist/${movieId}`, {
            method: 'DELETE'
        });
        if (response.ok) {
            // Reload the page to reflect changes
            location.reload();
        } else {
            console.error('Failed to delete movie');
        }
    } catch (error) {
        console.error('Error deleting movie:', error);
    }
}

    </script>
</body>
</html>
